<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нажатое состояние -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/> <!-- Полупрозрачный белый -->
        </shape>
    </item>
    <!-- Состояние при наведении (фокусе) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF"/> <!-- Слегка прозрачный белый -->
        </shape>
    </item>
    <!-- Обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Полностью прозрачный -->
        </shape>
    </item>
</selector> 